<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground"
    android:layout_margin="4dp">

    <!-- Header Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/modelName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Model Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:id="@+id/recommendedBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RECOMMENDED"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="?android:attr/colorAccent"
            android:padding="4dp"
            android:layout_marginStart="8dp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Description -->
    <TextView
        android:id="@+id/modelDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Model description goes here"
        android:textSize="14sp"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginBottom="8dp" />

    <!-- Details Row -->
    <TextView
        android:id="@+id/modelDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Parameters • Quantization • Size"
        android:textSize="12sp"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginBottom="8dp" />

    <!-- Progress Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="8dp">

        <ProgressBar
            android:id="@+id/downloadProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/progressText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Download progress info"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Action Button -->
    <Button
        android:id="@+id/modelActionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Download"
        android:textStyle="bold" />

</LinearLayout>