<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Image Analysis Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/input_background"
        android:padding="16dp"
        android:layout_marginBottom="16dp">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🖼️ Image Analysis"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            
            <TextView
                android:id="@+id/photo_count_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5 images uploaded"
                android:textSize="14sp"
                android:gravity="center" />
            
            <TextView
                android:id="@+id/analysis_progress_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4 of 5 analyzed"
                android:textSize="14sp"
                android:gravity="center" />
        </LinearLayout>
        
        <TextView
            android:id="@+id/ocr_status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 images with extracted text"
            android:textSize="14sp"
            android:gravity="center" />
    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">
        
        <Button
            android:id="@+id/btn_take_photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="📸 Take Photo"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#673AB7" />
        
        <Button
            android:id="@+id/btn_upload_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="📤 Upload"
            android:layout_marginStart="4dp"
            android:backgroundTint="#9C27B0" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">
        
        <Button
            android:id="@+id/btn_view_gallery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🖼️ Gallery"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#4CAF50" />
        
        <Button
            android:id="@+id/btn_image_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="⚙️ Settings"
            android:layout_marginStart="4dp"
            android:backgroundTint="#FF9800" />
    </LinearLayout>

    <!-- Images List Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recent Images"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tap any image to view details, AI analysis, or extracted text (📝)"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="12dp" />

    <!-- Images List -->
    <ListView
        android:id="@+id/images_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#E0E0E0"
        android:dividerHeight="1dp"
        android:background="@drawable/input_background" />

</LinearLayout>