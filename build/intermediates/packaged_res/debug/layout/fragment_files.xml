<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- File Management Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/input_background"
        android:padding="16dp"
        android:layout_marginBottom="16dp">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📂 File Management"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />
        
        <TextView
            android:id="@+id/analysis_status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📄 All files analyzed and ready"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="8dp" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <TextView
                android:id="@+id/upload_count_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5 files uploaded"
                android:textSize="14sp"
                android:gravity="center" />
            
            <TextView
                android:id="@+id/storage_used_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Storage: 6.2 MB"
                android:textSize="14sp"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">
        
        <Button
            android:id="@+id/btn_upload_file"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="📤 Upload File"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#673AB7" />
        
        <Button
            android:id="@+id/btn_analyze_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🔍 Analyze All"
            android:layout_marginStart="4dp"
            android:backgroundTint="#9C27B0" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">
        
        <Button
            android:id="@+id/btn_manage_storage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="💾 Storage"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#4CAF50" />
        
        <Button
            android:id="@+id/btn_file_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="⚙️ Settings"
            android:layout_marginStart="4dp"
            android:backgroundTint="#FF9800" />
    </LinearLayout>

    <!-- Files List Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Files"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tap any file to view details, ask AI questions, or manage"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="12dp" />

    <!-- Files List -->
    <ListView
        android:id="@+id/files_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#E0E0E0"
        android:dividerHeight="1dp"
        android:background="@drawable/input_background" />

</LinearLayout>