<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- AI Configuration Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ¤– AI Configuration"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#673AB7"
            android:layout_marginBottom="12dp" />

        <!-- Response Style -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Response Style"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />
            
            <Spinner
                android:id="@+id/response_style_spinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/input_background" />
        </LinearLayout>

        <!-- AI Creativity Level -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AI Creativity Level"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />
            
            <SeekBar
                android:id="@+id/creativity_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="75" />
            
            <TextView
                android:id="@+id/creativity_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="75% - Creative"
                android:textSize="14sp"
                android:textColor="#666666" />
        </LinearLayout>

        <!-- Long Memory Enable -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Enable Long-term Memory"
                android:textSize="16sp" />
            
            <Switch
                android:id="@+id/memory_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="8dp" />

        <!-- Appearance Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸŽ¨ Appearance"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#673AB7"
            android:layout_marginBottom="12dp" />

        <!-- Theme Selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dark Theme"
                android:textSize="16sp" />
            
            <Switch
                android:id="@+id/dark_theme_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Message Bubbles Style -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rounded Message Bubbles"
                android:textSize="16sp" />
            
            <Switch
                android:id="@+id/rounded_bubbles_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />
        </LinearLayout>

        <!-- Font Size -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Font Size"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />
            
            <SeekBar
                android:id="@+id/font_size_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="10"
                android:progress="5" />
            
            <TextView
                android:id="@+id/font_size_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medium"
                android:textSize="14sp"
                android:textColor="#666666" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="8dp" />

        <!-- Privacy & Data Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ”’ Privacy &amp; Data"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#673AB7"
            android:layout_marginBottom="12dp" />

        <!-- Local Processing -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Keep All Data Local"
                android:textSize="16sp" />
            
            <Switch
                android:id="@+id/local_processing_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />
        </LinearLayout>

        <!-- Auto-Delete Conversations -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Auto-Delete Conversations After"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />
            
            <Spinner
                android:id="@+id/auto_delete_spinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/input_background" />
        </LinearLayout>

        <!-- Data Management Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
            
            <Button
                android:id="@+id/clear_chat_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Clear Chat History"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#FF9800" />
            
            <Button
                android:id="@+id/export_data_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Export Data"
                android:layout_marginStart="8dp"
                android:backgroundTint="#4CAF50" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="8dp" />

        <!-- App Behavior Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âš™ï¸ App Behavior"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#673AB7"
            android:layout_marginBottom="12dp" />

        <!-- Notifications -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Enable Notifications"
                android:textSize="16sp" />
            
            <Switch
                android:id="@+id/notifications_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />
        </LinearLayout>

        <!-- Auto-backup -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Auto-backup Settings"
                android:textSize="16sp" />
            
            <Switch
                android:id="@+id/auto_backup_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />
        </LinearLayout>

        <!-- Typing Speed -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AI Response Speed"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />
            
            <SeekBar
                android:id="@+id/response_speed_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="60" />
            
            <TextView
                android:id="@+id/response_speed_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Normal Speed"
                android:textSize="14sp"
                android:textColor="#666666" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="8dp" />

        <!-- About Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â„¹ï¸ About"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#673AB7"
            android:layout_marginBottom="12dp" />

        <!-- App Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AI Brother v1.0"
                android:textSize="16sp"
                android:textStyle="bold" />
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Privacy-focused AI assistant"
                android:textSize="14sp"
                android:textColor="#666666" />
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <Button
                android:id="@+id/reset_settings_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reset All Settings"
                android:layout_marginBottom="8dp"
                android:backgroundTint="#F44336" />
            
            <Button
                android:id="@+id/replay_tutorial_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“š Replay Tutorial"
                android:layout_marginBottom="8dp"
                android:backgroundTint="#9C27B0" />
            
            <Button
                android:id="@+id/test_settings_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Test Settings"
                android:backgroundTint="#673AB7" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>